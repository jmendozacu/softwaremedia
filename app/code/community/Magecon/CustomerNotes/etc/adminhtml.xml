<config>
    <acl>
        <resources>
            <all>
                <title>Allow everything</title>
            </all>
            <admin>
                <children>
                    <customernotes translate="title" module="customernotes">
                        <title>Customer Notes Menu</title>
                        <sort_order>100</sort_order>
                    </customernotes>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <customernotes>
                                        <title>Customer Notes</title>
                                    </customernotes>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</config> 