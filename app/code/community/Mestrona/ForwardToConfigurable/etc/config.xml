<?xml version="1.0"?>
<config>
    <modules>
        <Mestrona_ForwardToConfigurable>
            <version>0.9.3</version>
        </Mestrona_ForwardToConfigurable>
    </modules>
    <global>
        <models>
            <mestrona_forwardtoconfigurable>
                <class>Mestrona_ForwardToConfigurable_Model</class>
            </mestrona_forwardtoconfigurable>
        </models>
        <helpers>
            <mestrona_forwardtoconfigurable>
                <class>Mestrona_ForwardToConfigurable_Helper</class>
            </mestrona_forwardtoconfigurable>
            <catalog>
                <rewrite>
                    <product>Mestrona_ForwardToConfigurable_Helper_Catalog_Product</product>
                </rewrite>
            </catalog>
        </helpers>
    </global>
    <frontend>
        <!--events>
            <controller_action_predispatch_catalog_product_view>
                <observers>
                    <mestrona_forwardtoconfigurable>
                        <type>model</type>
                        <class>mestrona_forwardtoconfigurable/observer</class>
                        <method>forwardToConfigurable</method>
                    </mestrona_forwardtoconfigurable>
                </observers>
            </controller_action_predispatch_catalog_product_view>
        </events-->
        <routers>
            <catalog>
                <use>standard</use>
                <args>
                    <modules>
                        <Mestrona_ForwardToConfigurable before="Mage_Catalog">Mestrona_ForwardToConfigurable</Mestrona_ForwardToConfigurable>
                    </modules>
                </args>
            </catalog>
            <cms>
                <use>standard</use>
                <args>
                    <modules>
                        <Mestrona_ForwardToConfigurable before="Mage_Cms">Mestrona_ForwardToConfigurable_Cms</Mestrona_ForwardToConfigurable>
                    </modules>
                </args>
            </cms>
        </routers>
    </frontend>
</config>