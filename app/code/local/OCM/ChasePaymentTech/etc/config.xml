<?xml version="1.0"?>
<config>
	<modules>
		<OCM_ChasePaymentTech>
			<version>0.1.7</version>
		</OCM_ChasePaymentTech>
	</modules>

	<global>
		<models>
		
			<chasePaymentTech>
				<class>OCM_ChasePaymentTech_Model</class>
				<resourceModel>chasePaymentTech_mysql4</resourceModel>
			</chasePaymentTech>
			<chasePaymentTech_mysql4>
				<class>OCM_ChasePaymentTech_Model_Mysql4</class>
				<entities>
					<profiles>
						<table>cm_chase_profiles</table>
					</profiles>
				</entities>
			</chasePaymentTech_mysql4>
		</models>


		<helpers>
			<chasePaymentTech>
				<class>OCM_ChasePaymentTech_Helper</class>
			</chasePaymentTech>
		</helpers>
		<resources>
			<ocm_chase_setup>
				<setup>
					<module>OCM_ChasePaymentTech</module>
					<class>Mage_Catalog_Model_Resource_Setup</class>
				</setup>
			</ocm_chase_setup>
		</resources>
	</global>

	<default>
		<payment>
			<chasePaymentTech>
				<active>0</active>
				<model>chasePaymentTech/paymentMethod</model>
			</chasePaymentTech>
		</payment>
	</default>
</config>
