<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<SoftwareMedia_Sales>
			<version>0.1.3</version>
		</SoftwareMedia_Sales>
	</modules>
	<global>
        <events>
            <sales_order_save_commit_after>
                <observers>
                    <softwareMedia_sales_license>
                        <class>softwareMedia_sales/observer</class>
                        <method>evaluateLicenseOrder</method>
                    </softwareMedia_sales_license>
                </observers>
            </sales_order_save_commit_after>
            <sales_order_save_before>
            	<observers>
                    <softwareMedia_sales_note>
                        <class>softwareMedia_sales/observer</class>
                        <method>salesNote</method>
                    </softwareMedia_sales_note>
                </observers>
            </sales_order_save_before>
        </events>
        <models>
            <softwareMedia_sales>
                <class>SoftwareMedia_Sales_Model</class>
            </softwareMedia_sales>
        </models>
		<resources>
			<SoftwareMedia_Sales_setup>
				<setup>
					<module>SoftwareMedia_Sales</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</SoftwareMedia_Sales_setup>
		</resources>
	</global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<SoftwareMedia_Sales before="Mage_Index">SoftwareMedia_Sales_Adminhtml</SoftwareMedia_Sales>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
</config>
