<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<SoftwareMedia_Ubervisibility>
			<version>0.1.11</version>
		</SoftwareMedia_Ubervisibility>
	</modules>
	<global>
		<helpers>
			<SoftwareMedia_Ubervisibility>
				<class>SoftwareMedia_Ubervisibility_Helper_Api</class>
			</SoftwareMedia_Ubervisibility>
		</helpers>
		<resources>
			<SoftwareMedia_Ubervisibility_setup>
				<setup>
					<module>SoftwareMedia_Ubervisibility</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</SoftwareMedia_Ubervisibility_setup>
		</resources>
		<models>
			<ubervisibility>
				<class>SoftwareMedia_Ubervisibility_Model</class>
			</ubervisibility>
		</models>
	</global>
	<crontab>
		<jobs>
			<SoftwareMedia_Ubervisibility>
				<schedule>
					<cron_expr>*/20 * * * *</cron_expr>
				</schedule>
				<run>
					<model>ubervisibility/observer::updateProduct</model>
				</run>
			</SoftwareMedia_Ubervisibility>
			<SoftwareMedia_Ubervisibility_Retrieve>
				<schedule>
					<cron_expr>0 0 * * *</cron_expr>
				</schedule>
				<run>
					<model>ubervisibility/observer::retrieveProducts</model>
				</run>
			</SoftwareMedia_Ubervisibility_Retrieve>
		</jobs>
	</crontab>
</config>
