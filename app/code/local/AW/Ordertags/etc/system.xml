<?xml version="1.0"?>
<config>
    <sections>
        <ordertags translate="label" module="ordertags">
            <label>Order Tags</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label">
                    <label>General</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <defaulttag translate="label">
                            <label>Default order tag</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ordertags/source_positions</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </defaulttag>
                        <blanktagimage translate="label">
                            <label>Blank tag</label>
                            <frontend_type>image</frontend_type>
                            <backend_model>ordertags/system_config_backend_image</backend_model>
                            <comment>If no image specified, default blank tag will be applied</comment>
                            <upload_dir config="system/filesystem/media" scope_info="1">aw_ordertag</upload_dir>
                            <base_url type="media" scope_info="1">aw_ordertag</base_url>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </blanktagimage>
                    </fields>
                </configuration>
            </groups>
        </ordertags>
    </sections>
</config>