<?php if ($this->getReviewsCount()): ?>
    <?php if($this->getIsProductView()):?>
    <div class="ratings">
    	<label><?php echo $this->__('Average Rating')?></label>
        <?php if ($this->getRatingSummary()):?>
        
            <div class="rating-box">
                <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
            </div>
        <?php endif;?>
        <p class="rating-links">
            <label><?php echo $this->__('(%d Review',$this->getReviewsCount()).
                ( $this->getReviewsCount() > 1 ? 's' : '') . ')'  ?></label>

        </p>
    </div>
        <?php else: ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
        	<label><?php echo $this->__('Average Rating')?></label>
        <div class="rating-box">
            <div class="rating" style="width:<?php echo $this->getRatingSummary() ?>%"></div>
        </div>
        <?php endif;?>
        <p class="rating-links">
            [<a href="#customer-review-wrap"><?php echo $this->__('%d Review',$this->getReviewsCount()).
                ( $this->getReviewsCount() > 1 ? 's' : '')  ?></a>]

        </p>
    </div>
        <?php endif;?>
