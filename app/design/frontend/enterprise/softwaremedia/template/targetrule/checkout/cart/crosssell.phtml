<?php if ($this->hasItems()):?>
<div class="crosssell">
    <div class="title-orange">
        <h3><?php echo $this->__('You May Also Like'); ?> </h3>
    </div>
    <ul class="slide_crosssell">
    <?php foreach ($this->getItemCollection() as $_item): ?>
        <li class="item">
            <a class="product-image" href="<?php echo $this->getProductUrl($_item) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(217); ?>" width="217" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a>
            <div class="product-shop">
                <h3 class="product-name"><?php echo $this->htmlEscape($_item->getName()) ?></h3>
                <?php echo $this->getPriceHtml($_item, true) ?>
                <?php if($_item->getData('msrp')):?>
						    <?php $_coreHelper = $this->helper('core');?>
						    <div class="product-msrp" style="text-align: right;font-weight: bold;">
						        <p style="font-size: 16px;" class=""><label><?php echo $this->__('MSRP: ') ?></label><span style="text-decoration: line-through;"><?php echo $_coreHelper->currency($_item->getMsrp(), true, false)?></span></p>
						    </div>
						<?php endif;?>
						<?php echo $this->getReviewsSummaryHtml($_item, 'short') ?>
                

            </div>
        </li>
    <?php endforeach; ?>
    </ul>
    <a id="crosssell_prev" class="prev-carousel">back</a>
    <a id="crosssell_next" class="next-carousel">next</a>
</div>
<?php endif;?>
