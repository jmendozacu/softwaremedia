<?php if ($this->getResultCount()): ?>
	<div class="page-title">
		<?php if ($this->helper('rss/catalog')->getTagFeedUrl()): ?>
			<a href="<?php echo $this->helper('rss/catalog')->getTagFeedUrl() ?>" class="nobr link-rss"><?php echo $this->__('Subscribe to Feed') ?></a>
		<?php endif; ?>
		<h1><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
	</div>
	<div class="results-view">
		<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
		<?php if ($messages = $this->getNoteMessages()): ?>
			<p class="note-msg">
				<?php foreach ($messages as $message): ?>
					<?php echo $message ?><br />
				<?php endforeach; ?>
			</p>
		<?php endif; ?>
		<?php echo $this->getProductListHtml() ?>
	</div>
<?php else: ?>
	<div class="page-title">
		<h1><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
	</div>
	<p class="note-msg font-13">
		<?php echo ($this->getNoResultText()) ? $this->getNoResultText() : $this->__('Your search returns no results.') ?>
	<div class="font-13">
		<span class='bold-text'>Some Tips on Searching</span>
		<div class='pad-left-15'>
			<ul class='display-bullets'>
				<li>
					<span class='bold-text'>Check your spelling</span>: Always do this first when you don't get any matches
				</li>
				<li>
					<span class='bold-text'>Use an alternative spelling</span>: For example, instead of antivirus, try anti virus
				</li>
				<li>
					<span class='bold-text'>Try an abbreviation</span>: For example, instead of Creative Suite 6, try CS6
				</li>
				<li>
					<span class='bold-text'>When entering a part number</span>: Try leaving off the last few digits
				</li>
				<li>
					<span class='bold-text'>Try searching for the manufacturer</span>: Then search by category and/or other criteria
				</li>
			</ul>
		</div>
	</div>
	<?php echo $this->getAdditionalHtml() ?>
	<?php if ($messages = $this->getNoteMessages()): ?>
		<?php foreach ($messages as $message): ?>
			<br /><?php echo $message ?>
		<?php endforeach; ?>
	<?php endif; ?>
	</p>
<?php endif; ?>
