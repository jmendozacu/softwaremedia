<?php
/**
 * One page checkout payment methods
 *
 * @see Mage_Checkout_Block_Onepage_Payment_Methods
 */
?>
<style>
#payment_form_amazon_payments {
	display: block !important;
}
#uniform-p_method_amazon_payments, label[for=p_method_amazon_payments] {
	display: none !important;
}
</style>
<dl class="sp-methods" id="checkout-payment-method-load">
<?php
    $methodList = $this->getMethods();
    //$oneMethod = count($methods) <= 1;
?>
<?php
    foreach ($methodList as $_method):
        $_code = $_method->getCode();
		if ($_code == 'amazon_payments') {
			$amazon = $_method;
			continue;
		}
       	if ($_code == 'checkmo')
       		continue;
       		
        if ($_code == 'purchaseorder' && !Mage::getSingleton('customer/session')->isLoggedIn())
        	continue;
        
        if (Mage::getSingleton('customer/session')->isLoggedIn()) {
	        $customer = Mage::getSingleton('customer/session')->getCustomer();
	        if ($_code == 'purchaseorder' && !$customer->getPoLimit()>0)
	        	continue;
        }
        
        $methods[] = $_method;
	endforeach;
	if ($amazon)
		$methods[] = $amazon;
?>
<?php
    $oneMethod = count($methods) <= 1;
?>
<?php
    foreach ($methods as $_method):
        $_code = $_method->getCode();
       // echo $_code;
      
?>
    <dt>
    <?php if(!$oneMethod): ?>
        <input id="p_method_<?php echo $_code ?>" value="<?php echo $_code ?>" type="radio" name="payment[method]" title="<?php echo $this->htmlEscape($_method->getTitle()) ?>" onclick="payment.switchMethod('<?php echo $_code ?>')"<?php if($this->getSelectedMethodCode()==$_code): ?> checked="checked"<?php endif; ?> class="radio" />
    <?php else: ?>
        <span class="no-display"><input id="p_method_<?php echo $_code ?>" value="<?php echo $_code ?>" type="radio" name="payment[method]" checked="checked" class="radio" /></span>
        <?php $oneMethod = $_code; ?>
    <?php endif; ?>
        <label for="p_method_<?php echo $_code ?>"><?php echo $this->escapeHtml($this->getMethodTitle($_method)) ?> <?php echo $this->getMethodLabelAfterHtml($_method) ?></label>
    </dt>
    <?php if ($html = $this->getPaymentMethodFormHtml($_method)): ?>
    <dd>
        <?php 
        echo $_code;
        if ($_code == 'amazon_payments'): ?>
        <ul class="form-list" id="payment_form_<?php echo $this->getMethodCode() ?>" style="display:block !important;">
    <li class="form-alt"> Amazon <?php echo Mage::app()->getLayout()->createBlock('amazon_payments/button')->setTemplate('amazon_payments/button.phtml')->toHtml(); ?></li>
</ul>
		<?php else:
        echo $html; 
        endif; 
        ?>
    </dd>
    <?php endif; ?>
<?php endforeach; ?>
</dl>
<?php echo $this->getChildChildHtml('additional'); ?>
<script type="text/javascript">
//<![CDATA[
<?php echo $this->getChildChildHtml('scripts'); ?>
payment.init();
jQuery('#checkout-payment-method-load input[type="checkbox"], #checkout-payment-method-load input[type="radio"],#checkout-payment-method-load select').uniform();
<?php if (is_string($oneMethod)): ?>
    payment.switchMethod('<?php echo $oneMethod ?>');
<?php endif; ?>
//]]>
</script>
